<!-- Header -->
<header class="w3-container w3-center w3-padding-32"> 
  <h1><b>MY BLOG</b></h1>
  <p>Welcome to the Wh40k Adeptus Custodes blog!</p><br>
  <p>In this blog You can find <%= Article.public_count %> 
  articles about playing in wh40k and collecting an army Adeptus Custodes.</p>
</header>
<!-- END Header -->

  <!-- Grid -->
  <div class="w3-row">

    <!-- Blog entries -->
    <div class="w3-col l8 s12">

      <div class="w3-card-4 w3-margin w3-white">
        <div class="w3-container">

          <% @articles.each do |article| %>
            <% unless article.archived? %>
              <%= image_url("#{article.picture}", width: "100%") %>
              <h3><b><%= article.title %></b></h3>
              <h5><%= article.title_description %></h5>
              <h5><%= article.submits_time %></h5>                                  

          <div class="w3-row">
            <div class="w3-col m8 s12">
              <p><button class="w3-button w3-padding-large w3-white w3-border"><%= link_to "READ MORE Â»", article %></button></p><hr>
            </div>
          </div>

            <% end %>
          <% end %>

        </div>
      </div>
      <div class="w3-margin">
        <div class="w3-row">
          <div class="w3-col m8 s12">
            <p><button class="w3-button w3-padding-large w3-white w3-border"><%= link_to "NEW ARTICLE", new_article_path %></button></p>
          </div>
        </div>
      </div>
    <!-- END BLOG ENTRIES -->
    </div>

    <!-- Introduction menu -->
    <div class="w3-col l4">

      <!-- About Card -->
      <div class="w3-card w3-margin w3-margin-top">
      <%= image_tag("20210123_133819.jpg", width: "100%", alt: "Custodes telemon leg painting") %>
        <div class="w3-container w3-white">
          <h4><b>My Name is Radek</b></h4>
          <p>I am veteran of game: Warhammer 40 000. I want to share my ideas about game, Games Workshop,
          painting, playing, meeting many various people and many more!</p>
        </div>
      </div><hr>
      <!-- END About Card -->

      <!-- Posts -->
      <div class="w3-card w3-margin">
        <div class="w3-container w3-padding">
          <h4>Popular Posts</h4>
        </div>
        <ul class="w3-ul w3-hoverable w3-white">
          <li class="w3-padding-16">
            <img src="/w3images/workshop.jpg" alt="Image" class="w3-left w3-margin-right" style="width:50px">
            <span class="w3-large">Lorem</span><br>
            <span>Sed mattis nunc</span>
          </li>
          <li class="w3-padding-16">
            <img src="/w3images/gondol.jpg" alt="Image" class="w3-left w3-margin-right" style="width:50px">
            <span class="w3-large">Ipsum</span><br>
            <span>Praes tinci sed</span>
          </li> 
          <li class="w3-padding-16">
            <img src="/w3images/skies.jpg" alt="Image" class="w3-left w3-margin-right" style="width:50px">
            <span class="w3-large">Dorum</span><br>
            <span>Ultricies congue</span>
          </li>   
          <li class="w3-padding-16 w3-hide-medium w3-hide-small">
            <img src="/w3images/rock.jpg" alt="Image" class="w3-left w3-margin-right" style="width:50px">
            <span class="w3-large">Mingsum</span><br>
            <span>Lorem ipsum dipsum</span>
          </li>  
        </ul>
      <!-- END Posts -->
      </div>

    <hr>

    <!-- END Introduction Menu -->
    </div>

  <!-- END GRID -->
  </div><br>

</body>
